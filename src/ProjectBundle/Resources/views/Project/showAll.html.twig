{% extends 'base.html.twig' %}
{% block body %}
    <h1>All Projects for {{ discipline.name }}</h1>
    <br>
    <div class="table">
        <table class="table table-sm">
            <tbody>
            <th>Project Name :</th>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}