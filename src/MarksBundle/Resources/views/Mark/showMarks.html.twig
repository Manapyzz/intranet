{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grades of {{ student.username }} in {{ discipline.name }}:</h1>

    <h3>Average in this discipline: {{ average }} </h3>
    <table class="table table-sm">
        <tbody>
            <th>Project</th>
            <th>Grade</th>
            <th>Comment</th>
            {% for mark in marks %}
            <tr>
                <td>{{ mark.project.name }}</td>
                <td>{{ mark.mark }}</td>
                <td>{{ mark.comment }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>
{% endblock %}