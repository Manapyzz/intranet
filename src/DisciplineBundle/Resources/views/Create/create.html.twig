{% extends 'base.html.twig' %}
{{ form_start(form) }}
    {{ form_widget(form) }}

<input type="submit" value="Create"
       class="btn btn-default pull-right" />
{{ form_end(form) }}

{% if app.session.flashBag.has('success') %}
    <div>
        {% for msg in app.session.flashBag.get('success') %}
            {{ msg }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashBag.has('alreadyExist') %}
    <div>
        {% for msg in app.session.flashBag.get('alreadyExist') %}
            {{ msg }}
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashBag.has('emptyField') %}
    <div>
        {% for msg in app.session.flashBag.get('emptyField') %}
            {{ msg }}
        {% endfor %}
    </div>
{% endif %}