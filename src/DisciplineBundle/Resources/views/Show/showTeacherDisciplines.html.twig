{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <div class="row">

    <h1>Disciplines</h1>
    <table class="table table-sm">
        <tbody>
        {% for disciplines in discipline %}
            <tr>
                <th>Name</th>
                <td>{{ disciplines.name}}</td>
                <td><a href="{{ path('show_discipline_student',{'id': disciplines.id})}}">Show Students</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>
{% endblock %}