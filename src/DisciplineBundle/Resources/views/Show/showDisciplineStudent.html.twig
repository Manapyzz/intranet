{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <div class="row">
    <br>
    <input type="button" value="Go Back" onclick="history.back(-1)"  class="btn btn-default" />
    <br>
    <h1>Discipline {{ discipline.name}} : </h1>
    <table class="table table-sm">
        <tbody>
        {% for users in disciplineStudent %}
            <tr>
                <th>Name</th>
                <td>{{ users.username}}</td>
                <td><a href="{{ path('marks_create',{'discipline_id': discipline.id, 'student_id': users.id })}}">Add Grade</a></td>
                <td><a href="{{ path('marks_show',{'discipline_id': discipline.id, 'student_id': users.id })}}">Show Grades</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>
{% endblock %}